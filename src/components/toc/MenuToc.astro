---
import { categories } from "~/constants";
---

<menu-toc class="sticky top-0 bg-zinc-100">
  <ul class="flex text-stone-600 overflow-scroll scroll-container">
    {
      categories.map((category) => (
        <li class="">
          <a
            class="block whitespace-nowrap font-medium border-b aria-[current]:border-amber-400 aria-[current]:bg-amber-400 aria-[current]:text-amber-950 p-3"
            href={"#" + category.slug}
          >
            {category.title}
          </a>
        </li>
      ))
    }
  </ul>
</menu-toc>
<script src="./menu-toc"></script>
<style>
  @media (max-width: 768px) {
    .scroll-container::before,
    .scroll-container::after {
      content: "";
      position: absolute;
      top: 0;
      bottom: 0;
      width: 24px;
      background: linear-gradient(to right, #f4f4f5, transparent);
      z-index: 2;
      opacity: 1; /* Initially hidden */
      pointer-events: none; /* Prevent it from blocking clicks */
    }

    .scroll-container::before {
      left: 0;
      opacity: var(--fade-left, 0);
    }

    .scroll-container::after {
      right: 0;
      transform: rotate(180deg);
      opacity: var(--fade-right, 0);
    }
  }
</style>
