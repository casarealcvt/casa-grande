---
import backgroundImage from "~/assets/hero.webp";
import { Picture } from "astro:assets";
import { orderUrl } from "~/constants";
---

<section class="relative">
  <h1 class="sr-only">Casa Grande Mexican Restaurant</h1>
  <Picture
    class="w-full h-svh object-cover object-center"
    src={backgroundImage}
    width={backgroundImage.width / 2}
    height={backgroundImage.height / 2}
    formats={["webp", "avif"]}
    loading="eager"
    decoding="async"
    alt="Casa Grande most popular dishes on a table"
  />
  <div class="absolute w-full inset-0 bg-gradient-to-b from-stone-900/40"></div>
  <article class="absolute bottom-0 right-0 xl:bottom-8 w-fit bg-amber-400 p-4">
    <div class="flex flex-col gap-2">
      <p class="font-semibold text-lg sm:text-xl">Authentic Mexican Cuisine</p>
      <p class="text-amber-900 max-w-prose mb-2">
        Experience the vibrant flavors of Mexico with every bite. From sizzling
        fajitas to handcrafted tacos, our dishes are a true taste of tradition.
      </p>
      <a
        href={orderUrl}
        rel="noopener noreferrer"
        class="w-full sm:w-fit text-center px-4 p-2 font-semibold text-white bg-amber-700 hover:bg-amber-600 rounded-md transition-colors"
        >Order Now</a
      >
    </div>
  </article>
</section>
