---
import { Picture } from "astro:assets";
import type { ImageMetadata } from "astro";

const photos = await Astro.glob<{ default: ImageMetadata }>(
  "/src/assets/photos/*.webp",
);
---

<section class="w-full bg-white py-12 md:py-20 px-4">
  <div
    class="grid sm:grid-cols-4 gap-4 sm:gap-2 max-w-6xl mx-auto"
    id="gallery"
  >
    {
      photos.map((photo, i) => (
        <div
          class:list={{
            "sm:col-span-2 sm:row-span-2": i === 0,
          }}
          class="sm:aspect-square rounded overflow-hidden"
        >
          <a
            href={photo.default.src}
            data-cropped="true"
            data-pswp-width={photo.default.width}
            data-pswp-height={photo.default.height}
            target="_blank"
          >
            <Picture
              src={photo.default}
              class="object-fit sm:object-cover w-full h-full hover:brightness-75 transition-all"
              alt="Food on the table"
              width={photo.default.width / 3}
              height={photo.default.height / 3}
              formats={["webp", "avif"]}
            />
          </a>
        </div>
      ))
    }
  </div>
</section>
<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  document.addEventListener("DOMContentLoaded", () => {
    const onIdle = window.requestIdleCallback || ((cb) => setTimeout(cb, 1));
    const loadPhotoswipe = () => {
      const lightbox = new PhotoSwipeLightbox({
        gallery: "#gallery",
        children: "a",
        pswpModule: () => import("photoswipe"),
      });
      lightbox.init();
    };
    onIdle(loadPhotoswipe);
  });
</script>
