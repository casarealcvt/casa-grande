---
import burritos from "~/assets/popular/burritos.webp";
import tacos from "~/assets/popular/tacos.webp";
import fajitas from "~/assets/popular/fajitas.webp";
import { Picture } from "astro:assets";

const popularDishes = [
  {
    title: "Fajitas",
    href: "/menu#fajitas",
    description:
      "Sizzling plate with your choice of meat, bell peppers, onions, and a side of rice, and tortillas",
    img: {
      src: fajitas,
      alt: "fajitas on a sizzling plate",
    },
  },
  {
    title: "Tacos",
    href: "/menu#tacos",
    description:
      "Three tacos with your choice of meat, topped with onions, cilantro, and a side of salsa",
    img: {
      src: tacos,
      alt: "three tacos in a plate",
    },
  },
  {
    title: "Burritos",
    href: "/menu#burritos",
    description:
      "A large flour tortilla filled with your choice of meat, rice, beans, lettuce, sour cream, shredded cheese, and pico de gallo",
    img: {
      src: burritos,
      alt: "One burrito in a plate",
    },
  },
];
---

<section class="bg-stone-900 py-12 md:py-20 px-4">
  <div
    class="flex w-full flex-col items-center justify-center max-w-6xl mx-auto"
  >
    <span
      class="inline-block text-sm font-semibold tracking-tight bg-amber-400 text-amber-950 px-3 py-1 rounded-full text-center"
      >Popular dishes</span
    >
    <h2
      class="text-3xl text-white text-pretty text-center mt-2 font-bold tracking-tighter md:text-4xl"
    >
      Our customer's favorites
    </h2>
    <p class="text-stone-300 mt-2 text-pretty max-w-prose text-center">
      Discover the most popular dishes in our restaurant
    </p>
    <ul
      class="w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mt-6 md:mt-8 gap-4"
    >
      {
        popularDishes.map((dish) => (
          <li class="relative ring-4 ring-transparent hover:ring-amber-400 rounded overflow-hidden">
            <a
              class="absolute inset-0 opacity-0 hover:opacity-100 bg-gradient-to-b from-transparent to-stone-900 transition-all"
              href={dish.href}
            >
              <span class="absolute top-2 left-2 px-2 py-1 bg-amber-400 text-sm font-medium">
                {dish.title}
              </span>
              <p class="absolute bottom-2 left-2 p-2 text-white">
                {dish.description}
              </p>
            </a>
            <Picture
              class="w-full h-full"
              src={dish.img.src}
              formats={["webp", "avif"]}
              height={dish.img.src.height / 3}
              width={dish.img.src.width / 3}
              loading="lazy"
              alt={dish.img.alt}
            />
          </li>
        ))
      }
    </ul>
  </div>
</section>
